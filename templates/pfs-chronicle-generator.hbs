<div class="pfs-chronicle-generator-form">
    <div class="top-section">
        <fieldset class="character-details">
            <legend>Character Details</legend>
            <div class="form-group">
                <label for="char">Character Name</label>
                <input type="text" id="char" name="char" value="{{char}}" readonly>
            </div>
            <div class="form-group">
                <label for="societyid">Society ID</label>
                <input type="text" id="societyid" name="societyid" value="{{societyid}}" readonly>
            </div>
            <div class="form-group">
                <label for="level">Level</label>
                <input type="text" id="level" name="level" value="{{level}}" readonly>
            </div>
        </fieldset>

        <fieldset class="event-details">
            <legend>Event Details</legend>
            <div class="form-group">
                <label for="gmid">GM PFS Number</label>
                <input type="text" id="gmid" name="gmid" value="{{gmid}}" readonly>
            </div>
            <div class="form-group">
                <label for="event">Event Name</label>
                <input type="text" id="event" name="event" value="{{event}}" readonly>
            </div>
            <div class="form-group">
                <label for="eventcode">Event Code</label>
                <input type="text" id="eventcode" name="eventcode" value="{{eventcode}}" readonly>
            </div>
            <div class="form-group">
                <label for="date">Event Date</label>
                <input type="date" id="date" name="date" value="{{date}}">
            </div>
        </fieldset>
    </div>

    <fieldset class="rewards-notes">
        <legend>Rewards & Notes</legend>
        <div class="form-group">
            <label for="xp_gained">XP Earned</label>
            <input type="number" id="xp_gained" name="xp_gained" value="{{xp_gained}}">
        </div>
        <div class="form-group">
            <label for="treasureBundles">Treasure Bundles</label>
            <input type="number" id="treasureBundles" name="treasureBundles" value="{{treasureBundles}}">
        </div>
        <div class="form-group">
            <label for="earnIncomeStatus">Earn Income</label>
            <div class="multi-field">
                <select id="earnIncomeStatus" name="earnIncomeStatus">
                    <option value="none" {{#if (eq earnIncomeStatus "none")}}selected{{/if}}>None</option>
                    <option value="failure" {{#if (eq earnIncomeStatus "failure")}}selected{{/if}}>Failure</option>
                    <option value="success-trained" {{#if (eq earnIncomeStatus "success-trained")}}selected{{/if}}>Success (Trained)</option>
                    <option value="success-expert" {{#if (eq earnIncomeStatus "success-expert")}}selected{{/if}}>Success (Expert)</option>
                    <option value="success-master" {{#if (eq earnIncomeStatus "success-master")}}selected{{/if}}>Success (Master)</option>
                    <option value="critical-success-trained" {{#if (eq earnIncomeStatus "critical-success-trained")}}selected{{/if}}>Critical Success (Trained)</option>
                    <option value="critical-success-expert" {{#if (eq earnIncomeStatus "critical-success-expert")}}selected{{/if}}>Critical Success (Expert)</option>
                    <option value="critical-success-master" {{#if (eq earnIncomeStatus "critical-s_master")}}selected{{/if}}>Critical Success (Master)</option>
                </select>
                <label for="daysOfDowntime">Days of Downtime</label>
                <input type="number" id="daysOfDowntime" name="daysOfDowntime" value="{{daysOfDowntime}}">
            </div>
        </div>
        <div class="form-group">
            <label for="gp_gained">Gold Earned</label>
            <input type="number" id="gp_gained" name="gp_gained" value="{{gp_gained}}" step="0.01" readonly>
        </div>
        <div class="form-group">
            <label for="gp_spent">Gold Spent</label>
            <input type="number" id="gp_spent" name="gp_spent" value="{{gp_spent}}" step="0.01">
        </div>
        <div class="form-group">
            <label for="notes">Notes</label>
            <textarea id="notes" name="notes" rows="12" cols="40">{{notes}}</textarea>
        </div>
        <div class="form-group">
            <label for="reputation">Reputation</label>
            <textarea id="reputation" name="reputation" rows="3" cols="80">{{reputation}}</textarea>
        </div>
    </fieldset>
</div>
