{
  "name": "pfs-chronicle-generator",
  "version": "1.0.0",
  "description": "A module to generate Pathfinder Society Chronicles.",
  "main": "scripts/main.js",
  "scripts": {
    "build": "esbuild scripts/main.ts --bundle --outfile=dist/main.js --format=esm --sourcemap",
    "watch": "esbuild scripts/main.ts --bundle --outfile=dist/main.js --format=esm --sourcemap --watch",
    "test": "jest",
    "draw-grid": "esbuild scripts/draw_grid.ts --bundle --outfile=dist/draw_grid.js --platform=node && node dist/draw_grid.js",
    "fill-fields": "esbuild scripts/fill_fields.ts --bundle --outfile=dist/fill_fields.js --platform=node && node dist/fill_fields.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "esbuild": "^0.25.9",
    "fvtt-types": "npm:@league-of-foundry-developers/foundry-vtt-types@^13.346.0-beta.20250812191140",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "fontkit": "^2.0.2",
    "js-yaml": "^4.1.0",
    "pdf-lib": "^1.17.1"
  }
}
